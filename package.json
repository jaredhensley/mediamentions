{
  "name": "mediamentions",
  "version": "1.0.0",
  "description": "Daily tracking scheduler and media mention pipeline",
  "main": "src/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/server.js",
    "dev": "concurrently \"node src/dev.js\" \"cd client && npm run dev\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "dev:backend": "node src/dev.js",
    "dev:frontend": "cd client && npm run dev",
    "scheduler": "node src/index.js",
    "scheduler:once": "node src/index.js --once",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "client/src/**/*.{ts,tsx}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "node-cron": "^3.0.3",
    "puppeteer": "^24.32.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "ws": "^8.18.3",
    "zod": "^4.1.13"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4"
  }
}
