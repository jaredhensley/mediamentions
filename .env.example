# ============================================================================
# MEDIAMENTIONS ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in your values
# ============================================================================

# Server configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# CORS - set to your frontend URL
# Development: http://localhost:5173
# Production: https://your-app.onrender.com
CORS_ORIGIN=http://localhost:5173

# Database path (SQLite)
# Development: uses ./data/mediamentions.db by default
# Production: set to persistent disk path (e.g., /app/data/mediamentions.db)
# DATABASE_URL=/app/data/mediamentions.db

# ============================================================================
# AUTHENTICATION (required in production)
# ============================================================================
# Generate with: node -e "console.log('mm_' + require('crypto').randomBytes(32).toString('hex'))"
API_KEY=

# ============================================================================
# GOOGLE CUSTOM SEARCH API (required)
# ============================================================================
# Get these from: https://console.cloud.google.com/
GOOGLE_API_KEY=
GOOGLE_CSE_ID=
# Optional: domain to use as referer for API requests
GOOGLE_REFERER=

# ============================================================================
# SCHEDULER SETTINGS
# ============================================================================
# Time to run daily search (24-hour format)
SCHEDULE_TIME=03:00
# Timezone for scheduler
TZ=America/New_York

# ============================================================================
# SEARCH SETTINGS
# ============================================================================
# Max results per search provider (default: 10)
MAX_RESULTS_PER_PROVIDER=10
# Max age of articles to include in days (default: 180)
ARTICLE_AGE_DAYS=180

# ============================================================================
# VERIFICATION SETTINGS
# ============================================================================
# Rate limit between verification requests in ms (default: 500)
# VERIFY_RATE_LIMIT_MS=500
# Browser page load timeout in ms (default: 20000)
# VERIFY_BROWSER_TIMEOUT_MS=20000
# Number of concurrent verification requests (default: 5)
# VERIFY_CONCURRENT_REQUESTS=5

# ============================================================================
# RSS FEED SETTINGS
# ============================================================================
# Polling interval in hours (default: 2)
# RSS_POLLING_INTERVAL_HOURS=2
# Whether to auto-verify after RSS polling (default: true)
# RSS_AUTO_VERIFY=true

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info
